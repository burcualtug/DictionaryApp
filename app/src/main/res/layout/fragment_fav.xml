<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fav.FavFragment"
    android:id="@+id/frameLayoutFav"
    android:background="@color/lightgray"
    android:backgroundTint="@color/lightgray">
    <data>
        <variable name="viewmodel"
            type="com.orion.dictionarymvvm.ui.dictionary.DictionaryViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/jsonListFav"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="570dp"
            android:layout_marginTop="130dp"
            android:layout_gravity="center_horizontal"
            android:scrollbarFadeDuration="0"
            android:scrollbarSize="5dp"
            android:scrollbarThumbVertical="@android:color/holo_purple"
            android:scrollbars="vertical" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:layout_marginTop="10dp"
                style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
                android:drawableStart="@drawable/ic_baseline_search_24"
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint="Search!"
                />
        </RelativeLayout>
    </RelativeLayout>





</layout>